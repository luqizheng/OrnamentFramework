    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="SupportEmail" value="fantasylu@126.com" />
    <add key="DomainUrl" value="http://localhost:37037" />
    <add key="nhConfig" value="~/config/hibernate_mysql.cfg.config" />
    <add key="verifyEmailTimeout" value="144" />
    <add key="VerifyCode" value="false" />
    <add key="SiteName" value="Ornament"/>
