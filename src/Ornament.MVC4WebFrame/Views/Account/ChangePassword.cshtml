@using Qi.Web.Mvc
@model Ornament.MVCWebFrame.Models.ChangePasswordModel
@using (Ajax.BeginForm("ChangePassword", "Account", new AjaxOptions()
{
    UpdateTargetId = "changePassowrd",
    OnComplete = "ResetErrorState",
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "post"
}, new { @class = "form-horizontal", autocomplete = "off", id = "changePassowrd" }))
{
    @Html.Partial("_changePassword", this.Model)
}
<script type="text/javascript">
    function ResetErrorState() {
        $("#changePassowrd").bootstrapMakeUp();
    }

</script>
