@using Resources
@using Ornament.Web.HtmlExtends;
@model Ornament.MemberShip.User
@using (Ajax.BeginForm("SaveBaseInfo", new AjaxOptions() { HttpMethod = "post", OnSuccess = "SaveSuccess" }))
{
    <div class="form-horizontal">

        <div class="control-group">
            @Html.LabelFor(s => s.Name, new { @class = " control-label" })
            <div class="controls">
                @Html.TextBoxFor(s => s.Name)
                @Html.ValidationMessageFor(s => s.Name)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(s => s.Contact.Email, new { @class = "control-label" })
            <div class="controls">
                <div class="input-append">
                    @Html.TextBoxFor(s => s.Contact.Email)
                    <button id="VerifyEmail" class="btn" type="button">@Basic.Validate</button>
                </div>
                @Html.ValidationMessageFor(s => s.Contact.Email)

            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(s => s.Contact.Phone, new { @class = " control-label" })
            <div class="controls">
                @Html.TextBoxFor(s => s.Contact.Phone)
                @Html.ValidationMessageFor(s => s.Contact.Phone)
            </div>
        </div>
        <div class="form-actions">
            <button class="btn btn-primary" data-loading-text="saving...">@Basic.Save</button>
        </div>
    </div>
}
<script type="text/javascript">
    if (typeof SaveSuccess == "undefined") {
        function SaveSuccess(e) {
            if (e.success) {
                if (!e.emailChanged)
                    alert("@Basic.SaveSuccess");
            }

        }
    }
    seajs.use(["jquery"], function () {
        $("#EmailChanged").click(function () {
            $.get("@Url.Action("VarifyEmail")", { email: $("#Email").val() }, function (d) {
                if (d.success) {
                    alert("Verify eMail has sent,Please check your eMail.");
                } else {
                    alert(d.message);
                }
            });
        });
    })
</script>
