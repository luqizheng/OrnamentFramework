@using Resources
<div id="pmEditor" class="modal fade hide">
    <div class="modal-header">
        <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
        <h3><i class="fam-comments"></i>Chat Record</h3>

    </div>

    <div class="modal-body" style="min-height: 400px; max-height: 90%">
        <div class="row-fluid">
            <div class="widget span2" >
                <ul role="friendlist">
                    <li>
                        AAAA
                        <ul>
                            <li>asdf</li>
                        </ul>
                    </li>
                    <li>bb</li>
                    <li>bb</li>
                    <li>cc</li>
                    <li>dd</li>
                </ul>
            </div>

            <div class="widget span10 " style="margin-bottom: 10px">
                <div class="well-smoke">
                    <dl class="clearfix chat" role="chat" style="padding: 8px; height: 245px; overflow: auto">
                    </dl>
                </div>
                <div style="padding: 10px 0; position: relative">
                    <textarea class="styled" name="editor" role="content"></textarea>
                    <span style="padding-left: 10px; position: absolute; right: 10px; top: 10px" role="progressbar" class="hide">
                        <img alt="" src="/content/templates/pannonia/img/elements/loaders/5s.gif">
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn" href="#" data-dismiss="modal" aria-hidden="true"><i class="icon-remove"></i>@Basic.Cancel</a>
        <a class="btn btn-primary" href="#" role="send"><i class="icon-envelope"></i>@Basic.Send</a>
    </div>
</div>
<script type="text/javascript" src="/Scripts/ckeditor/ckeditor.js">
</script>
