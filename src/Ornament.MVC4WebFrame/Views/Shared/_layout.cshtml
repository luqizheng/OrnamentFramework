@using System.Globalization
@using System.Web.Optimization
@using Resources

@{
   ViewBag.BodyClass = "no-background";
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    
    <link href="@Url.Content("~/templates/pannonia/css/main.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/scripts/seajs/sea.js" data-config="/scripts/config" data-main="/scripts/main"></script>

    @RenderSection("head", false)
</head>

<body class="no-background">
    <div id="top">
        <div class="fixed">
            <a href="@Url.Action("Index", "Home", new { area = "" })">Home</a>
            @Html.Partial("_topMenu")
        </div>
    </div>
    @RenderBody()
    <div id="footer"></div>
    @RenderSection("script", false)
</body>
</html>
