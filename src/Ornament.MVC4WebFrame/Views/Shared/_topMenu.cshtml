            </ul>
        </li>
    </ul>
}
else
{
    <ul class="top-menu">
        <li class="dropdown mlang">
            <a data-toggle="dropdown" title="Multi language" data-placement="bottom"><i class="icon-globe" style="color: white"></i></a>
            <ul class="dropdown-menu" id="uld">
                @foreach (var lang in OrnamentContext.Configuration.Languages)
                {
                    <li><a href="@Url.Action("SwitchLanguage", "Home", new { id = lang.Key, area = "" })">@lang.Name</a></li>
                }
            </ul>
        </li>
        <li>
            <a href="@Url.Action("Logon", "Account", new { area = "" })" class="user-menu" style="width: 50px; padding:12px"><span style="margin: 0"><i class="icon-user" style="color: white"></i>@Basic.Logon</span></a>
        </li>

    </ul>
}

<script type="text/javascript">
    seajs.use(["/models/personal.js"], function(api) {
        api.watch(1000,function (d) {
            if (d.HasMessage) {
                $(".messages").append('<i class="new-message"></i>');
            }
        });
        api.unWatch();
    });
</script>
