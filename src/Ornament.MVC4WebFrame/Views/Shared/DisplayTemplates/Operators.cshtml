@using Ornament
@using Ornament.MemberShip.Permissions
@using Ornament.Web
@using Qi
@model Permission
@{
    Type enumType = OrnamentContext.ResourceManager.GetOperatorType(this.Model.Resource);
    SortedDictionary<string, object> directory = EnumHelper.GetDescriptionList(enumType);
    var list = new List<string>();
}
@foreach (string key in directory.Keys)
{
    if (Convert.ToInt32(directory[key]) != 0 && this.Model.HasOperator((Enum)directory[key]))
    {
        list.Add("[" + directory[key] + "]");
    }
    else
    {
        list.Add(directory[key].ToString());
    }
}
@String.Join(",", list.ToArray())
