@model DateTime
@{
    var display = ViewData.ModelMetadata.DisplayName ?? ViewData.ModelMetadata.PropertyName;
}
<div class="control-group">
    @Html.Label("", display, new { @class = "control-label" })
    <div class="controls">
        <div data-date-format="yyyy-mm-dd" data-date="@this.Model.ToString("yyyy-MM-dd")" class="date input-append">
            @Html.TextBox("", this.Model.ToString("yyyy-MM-dd"), new Dictionary<string, object>()
                {
                    {"inputmask-format","y-s-d"}
                })
            <span class="add-on"><i class="icon-calendar"></i></span>
            @Html.ValidationSummary("")
        </div>
    </div>
</div>

