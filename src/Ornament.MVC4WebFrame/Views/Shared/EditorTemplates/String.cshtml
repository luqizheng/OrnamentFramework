@using Ornament.Web.ValidationAdapter
@model string
@{
    var display = ViewData.ModelMetadata.DisplayName ?? ViewData.ModelMetadata.PropertyName;
    var inputName = string.Empty;// ViewData.TemplateInfo.HtmlFieldPrefix;    
    var htmlAttris = new Dictionary<string, object> { { "class", "span10" } };

    foreach (var attr in ViewData.ModelMetadata.GetValidators(this.ViewContext))
    {
        var b = attr as StringLengthAttributeAdapter;
        if (b != null)
        {
            foreach (ModelClientValidationRule mcvr in b.GetClientValidationRules())
            {
                var length = mcvr.ValidationParameters["max"];
                htmlAttris.Add("maxlength", length);
            }
            break;
        }

    }
}
<div class="control-group">
    @Html.Label(inputName, display, new { @class = "control-label" })
    <div class="controls">
        @Html.TextBox(inputName, this.Model, htmlAttris)
        @Html.ValidationMessage(inputName)
    </div>
</div>
<script type="text/javascript">
    seajs.use(["inputlimiter"])
</script>
