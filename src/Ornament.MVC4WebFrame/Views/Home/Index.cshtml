@using System.Web.Optimization
@using Qi.Web.Mvc
@using QiProject.Defects
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_appLayout.cshtml";
    var defects = ((IEnumerable<Defect>)ViewData["Defects"]) ?? new List<Defect>();
}
@section head{
}
@section script
{
    <script src="@Url.Content("~/Scripts/jQuery.tmpl.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.multiChoice.js")" type="text/javascript"></script>
    
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
<div class="row">
    <div class="box span4">
        <div class="content">
            <section>
                <header>
                    <h3>
                        Info</h3>
                </header>
                <ul class="todolist">
                    <li>
                        <input checked="checked" type="checkbox" />
                        Leo has publish <b class="label label-info">SC930</b>, please re-test all fix-release
                        version </li>
                </ul>
            </section>
        </div>
    </div>
    <div class="box span3">
        <div class="content">
            <section>
                <header>
                    <h3>
                        New changed</h3>
                </header>
            </section>
        </div>
    </div>
    <div class="box span3">
        <div class="content">
            <section>
                <header>
                    <h3>
                        Projects</h3>
                </header>
            </section>
        </div>
    </div>
</div>
<div class="box">
    <div class="content">
        <header>
            <h3>
                Defects</h3>
        </header>
        <section>
            @Html.Partial("~/Areas/Projects/Views/Shared/DisplayTemplates/_dashboard_DefectIndex.cshtml", defects)
        </section>
    </div>
</div>
