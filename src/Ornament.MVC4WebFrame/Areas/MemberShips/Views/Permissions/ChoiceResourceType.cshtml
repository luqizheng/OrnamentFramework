@using Ornament.Web
@using Qi.Web.Mvc
@using Ornament;
@model Ornament.MVCWebFrame.Areas.MemberShips.Models.PermissionWizard
@{
    Layout = "~/Views/Shared/_appLayout.cshtml";
}
<div class="page-header">
    Choice Resource Type
</div>
<div class="box">
    <div class="content">
        @using (Html.BeginForm())
        {
            <fieldset class="form-horizontal">
                @Html.Partial("PermissionWizardDataView", this.Model)
                @{
            var i = -1;
            bool foundSelected = false;
            foreach (var resourceType in OrnamentContext.ResourcesConfiguration.ResourceSettings)
            {
                foundSelected = resourceType.Name == this.Model.DescriptionResourceName;
                i++;

                    <div>
                        <label for="@("ResourceType" + i)">
                            @Html.RadioButton("DescriptionResourceName", resourceType.Name, foundSelected, new { id = "ResourceType" + i })
                            @resourceType.Name
                        </label>
                    </div>
            }
                }
                @if (!foundSelected)
                {
                    <script type="text/javascript">
                        $("#ResourceType0").attr("checked", true)
                    </script>
                }
                <div class="form-actions">
                    <button type="submit" id="next" value="true" name="forward" class="btn btn-primary">
                        @Resources.Basic.Next <i class="icon-chevron-right icon-white"></i>
                    </button>
                    <a type="button" id="cancel" style="margin-left: 20px" href="@Url.Action("index")" class="btn btn-danger">@Resources.Basic.Cancel</a>
                </div>
            </fieldset>
        }
    </div>
</div>
