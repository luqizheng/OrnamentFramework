@using Ornament.Models.Memberships.Partials
@using Resources
@model Ornament.Models.Memberships.CreateUserModel
@{
    ViewBag.Title = Basic.Create + MemberShip.User;

    var ajaxOptions = new AjaxOptions
        {
            UpdateTargetId = "createUserForm",
            OnComplete = "ResetErrorState",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "post"
        };
    var formStyle = new
        {
            @class = "form-horizontal row-fluid ",
            autocomplete = "off",
            id = "createUserForm"
        };
}

@using (Ajax.BeginForm("Create", "User", null, ajaxOptions, formStyle))
{
    @Html.ValidationSummary(true)
    @Html.Partial("DisplayTemplates/UserBasicInfo", Model != null ? Model.BasicInfo : new UserBasicInfoModel())
    @Html.Partial("DisplayTemplates/UserOptionInfo", Model != null ? Model.OptionInfo : new UserOptionInformation())
    @Html.HiddenFor(s => s.State.IsApproved)
    ;
}