@using Ornament.Web

@model Ornament.MVCWebFrame.Areas.MemberShips.Models.CreateUserModel
@{
    ViewBag.Title = Resources.Basic.Create + Resources.MemberShip.User;
    Layout = "~/Views/Shared/_appLayout.cshtml";
}


@section pageTitle
{
    <h5>@Resources.Basic.Create@Resources.MemberShip.User</h5>
}
<div class="widget row-fluid">
    @using (Html.BeginForm("Create", "User", null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <!-- General form elements -->
            <div class="widget row-fluid">
                <div class="navbar">
                    <div class="navbar-inner">
                        <h6>@Html.GetResourceString("tab_basicInfo")</h6>
                        <ul class="navbar-icons">
                            <li><a title="" class="tip" href="#" data-original-title="Add new option"><i class="icon-plus"></i></a></li>
                            <li><a title="" class="tip" href="#" data-original-title="View statistics"><i class="icon-reorder"></i></a></li>
                            <li><a title="" class="tip" href="#" data-original-title="Parameters"><i class="icon-cogs"></i></a></li>
                        </ul>
                    </div>
                </div>

                <div class="well">
                    @Html.ValidationSummary(false)
                    @Html.Partial("DisplayTemplates/UserBasicInfo", this.Model)
                    @Html.Partial("DisplayTemplates/UserPassword", this.Model)
                    @if (Membership.RequiresQuestionAndAnswer)
                    {
                        @Html.Partial("DisplayTemplates/UserQuestionAnswer", this.Model)
                    }
                    @Html.Partial("DisplayTemplates/UserOptionInfo", this.Model)
                </div>
            </div>
            <!-- /general form elements -->
        </fieldset>
        <div class="form-actions">
            <a id="saveButton" class="btn btn-primary"><i class="icon-pencil icon-white"></i>@Resources.Basic.Create</a>
            <a id="backButton" type="button" href="@Url.Action("Index")" class="btn btn-warning">
                <i class="icon-warning-sign icon-white"></i>@Resources.Basic.Cancel</a>
        </div>
    }

</div>

@section script
{
    <script type="text/javascript">
        seajs.use(["jquery", "/scripts/compatibles/valid.js"], function () {

            $("#saveButton").click(function () {
                if ($("#Name").val().length == 0) {
                    $("#Name").val($("#LoginId").val());
                }
                $("form").submit();
            });
        });
    </script>
}
