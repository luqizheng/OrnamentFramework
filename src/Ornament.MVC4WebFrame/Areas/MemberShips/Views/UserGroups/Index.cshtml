@using Ornament.MemberShip
@using Resources
@model IEnumerable<Ornament.MemberShip.UserGroup>
@{
    ViewBag.Title = MemberShip.UserGroup + Basic.Index;
    Layout = "~/Views/Shared/_appLayout.cshtml";
}
<div class="box">
    <div class="content">
        <section>
            <header>
                <a href="@Url.Action("Create")" class="btn btn-primary"><i class="icon-white icon-plus"></i>@Basic.Create                </a>
            </header>
            <section>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 250px">
                            </th>
                            <th>
                                @Html.LabelFor(s => ((UserGroup)null).Name)
                            </th>
                            <th>
                                @Html.LabelFor(s => ((UserGroup)null).Remark)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserGroup item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(Basic.Edit, "Edit", new { id = item.Id }) |
                                    @Html.ActionLink(MemberShip.AssignRoles, "AssignRole", new { id = item.Id })
                                    |
                                    @Html.ActionLink(MemberShip.AssignUserGroup, "AssignUser", new { id = item.Id })
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Remark
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </section>
    </div>
</div>
