@using Ornament.Web
@using Qi
@model Ornament.MVCWebFrame.Areas.Docs.Models.DateTimePickerModel
@{
    ViewBag.Title = "DatePicker";
    Layout = "../Shared/_codeLayout.cshtml";
}
@section pageTitle
{
    <h5>Date/Time/Period 
    </h5>
    <span>Pure Html for DatePicker and input mask for Date 
    </span>
}
<div class="row-fluid">
    <div class="widget">
        <div class="navbar">
            <div class="navbar-inner">
                <h6>Date Picker</h6>
            </div>
        </div>
        <div class="body well">
            <div class="row-fluid">
                <div class="span3">
                    <div class="widget">
                        <div class="body well">
                            @Html.EditorFor(s => s.Now)
                        </div>
                    </div>
                </div>
                <div class="span7">
                    <div class="widget">
                        <div class="body well">
                            <!-- start to build-->
                            <div class="semi-widget">
                                <strong>Defined a View Model</strong>
                                <pre class="prettyprint lang-vb pre-scrollable linenums">
public class DateTimePickerModel
{
        [UIHint("Date")]
        public DateTime Now { get; set; }
}
                    </pre>
                            </div>
                            
                            <!-- start to build-->
                            <div class="semi-widget">
                                <strong>Render HTML with Razor</strong>

                                <pre class="prettyprint lang-html  pre-scrollable linenums">
@@Html.EditorFor(s => s.Now)
</pre>
                            </div>
                            
                            <!-- start to build-->
                            <div class="semi-widget">
                                <strong> call datepicker</strong>
                               
                                <pre class="prettyprint lang-js  pre-scrollable linenums">
seajs.use(["datePicker"], function () {
    $(".date").datepicker();
});
</pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="box">
    <div class="content">
        <h4>Pure Html for DatePicker and input mask for Date
        </h4>
        <div class="text-info">
            <ul>
                <li>DatePicker is https://github.com/eternicode/bootstrap-datepicker </li>
                <li>InputMask is https://github.com/RobinHerbots/jquery.inputmask </li>
            </ul>
        </div>
        <form>
            <div class="control-group">
                <label>
                    Time Picker & input mask</label>
                <div class="controls">
                    <div class="input-append date" id="example1" data-date="@DateTime.Now.ToString("yyyy-MM-dd")" data-date-format="yyyy-mm-dd">
                        <input size="16" type="text" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        <span class="add-on"><i class="icon-calendar"></i></span>
                    </div>
                </div>
            </div>
            <pre class="prettyprint lang-html">
            @{
                var code = @"
 <div class=""controls"">
        <div class=""input-append date"" id=""example1"" data-date=""@DateTime.Now.ToString(""yyyy-MM-dd"")"" data-date-format=""yyyy-mm-dd"">
            <input size=""16"" type=""text"" value=""@DateTime.Now.ToString(""yyyy-MM-dd"")"">
            <span class=""add-on""><i class=""icon-calendar""></i></span>
        </div>
</div>
 @Scripts.Render(""~/Scripts/DatePicker"")
<script type=""text/javascript"">
        $('#example1').children().first().inputmask('y-m-d');
</script>
";
            }
@code
</pre>
        </form>
    </div>
</div>
