@using Qi.Attendance
@using Resources
@model System.Collections.Generic.IEnumerable<Qi.Attendance.EmployeeGroup>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_appLayout.cshtml";
}
<div class="page-header">
    <h3>
        雇员分组及设定</h3>
</div>
<div class="box">
    <div class="content">
        
        <div class="btn-toolbar">
            <a class="btn btn-primary" href="@Url.Action("Create")">@Basic.Create</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 150px">
                    </th>
                    <th>
                        名称
                    </th>
                    <th>
                        备注
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in this.Model ?? new List<EmployeeGroup>())
                {
                    <tr>
                        <td class="btn-toolbar">
                            <a class="btn btn-small" href="@Url.Action("Edit", new { id = a.Id })" title="修改雇员分组"><i class="icon-edit"></i>
                            </a><a class="btn btn-small" title="为分组添加新雇员" href="@Url.Action("Index", "Employee", new { employeeGroupId = a.Id })"><i class="icon-user"></i></a>
                        </td>
                        <td>@a.Name
                        </td>
                        <td>@a.Remark
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
