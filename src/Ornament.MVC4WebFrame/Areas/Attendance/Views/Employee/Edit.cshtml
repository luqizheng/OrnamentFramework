@using Qi.Attendance
@using Resources
@model Qi.Attendance.Employee
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_appLayout.cshtml";
}
<div class="page-header">
    <h2>
        @Basic.Edit @this.Model.Name</h2>
</div>
<div class="box">
    <div class="content">
        <form class="form-horizontal" method="POST">
            @Html.ValidationSummary(false)
            @Html.Partial("EditorTemplates/Employee", Model)
            <div class="form-actions">
                <button class="btn btn-primary">@Basic.Save</button>
                <a class="btn btn-danger" href="@Url.Action("Index")">@Basic.Cancel</a>
            </div>
        </form>
    </div>
</div>
