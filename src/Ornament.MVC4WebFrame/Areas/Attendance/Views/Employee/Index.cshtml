@using Resources
@model System.Collections.Generic.IEnumerable<Qi.Attendance.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_appLayout.cshtml";
}
<div class="page-header">
    <h3>
        雇员列表</h3>
</div>
<div class="box">
    <div class="content">
        <div class="btn-toolbar">
            <a class="btn btn-primary" href="@Url.Action("Create")">@Basic.Create</a>
        </div>

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        名字
                    </th>
                    <th>
                        卡号
                    </th>
                </tr>
            </thead>
            @foreach (var employee in this.Model)
            {
                <tr>
                    <td>
                    </td>
                    <td>@employee.Name
                    </td>
                    <td>@employee.CardNo
                    </td>
                </tr>
                
            }
        </table>
    </div>
</div>
