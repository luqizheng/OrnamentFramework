@using Qi
@using Qi.Attendance
@using Resources
@model IEnumerable<Qi.Attendance.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_appLayout.cshtml";
}

<div>
    <h3>雇员列表</h3>
</div>
<div class="box">
    <div class="content">
        <div class="btn-toolbar">
            <a class="btn btn-primary" href="@Url.Action("Create")" title="创建雇员">@Basic.Create</a>
        </div>

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        名字
                    </th>
                    <th>
                        状态
                    </th>
                    <th>
                        卡号
                    </th>
                </tr>
            </thead>
            @foreach (Employee employee in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", "Employee", new {id = employee.Id})" class="btn btn-small" title="编辑雇员 @employee.Name"><i class="icon-edit"></i></a>
                    </td>
                    <td>@employee.Name
                    </td>
                    <td>
                        @employee.State.ToDescription()
                    </td>
                    <td>@employee.CardNo
                    </td>
                </tr>
            }
        </table>
    </div>
</div>