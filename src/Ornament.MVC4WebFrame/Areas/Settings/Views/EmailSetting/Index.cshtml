@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_appLayout.cshtml";
}

<div class="widget">
    <div class="navbar">
        <div class="navbar-inner">
            <h6>With loader</h6>
            <div class="loading pull-right">
                <span>Updating data</span>
                <img alt="" src="img/elements/loaders/6s.gif">
            </div>
        </div>
    </div>
    <div class="tabbable tabs-left">
        <ul class="nav nav-tabs" id="nav">
            <li class="active">
                <a href="#tab7" data-toggle="tab"
                   load="@Url.Action("CreateUser")">
                    <i class="fam-layout-content"></i>Section 1
                </a>
            </li>
            <li>
                <a href="#tab8" data-toggle="tab"><i class="fam-date"></i>Section 2</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab7">
            </div>
            <div class="tab-pane" id="tab8">Howdy, I'm in Section 2.</div>
        </div>
    </div>
</div>

@section pageTitle{
    <h6>Notify Email Setting</h6>
}

@section Script
{
    <script type="text/javascript">
        seajs.use(['jquery'], function () {
            $("a[data-toggle=tab]").on("show", function () {
                var tar = $(this).attr("href");
                $(tar).load($(this).attr("load"));
            });
        });
    </script>

}