@using Ornament.Properties
@using Ornament.Web
@using Ornament
@model IEnumerable<Badminton.MeasurementUnit>

@{
    ViewBag.Title = "计量单位";
    Layout = OrnamentContext.Configuration.Layout();
}
@section pageTitle{
    <h5>计量单位列表</h5>
}


<div class="widget">
    <div class="navbar">
        <div class="navbar-inner">
            <a id="add" class="btn btn-primary" href="#@Url.Action("Create")"><i class="icon-plus icon-white"></i>@Resources.Resources.Create</a>
        </div>
    </div>
    <div class="body well">
        @if (Model.Count() != 0)
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IntegerName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DecimalName)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IntegerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DecimalName)
                            </td>

                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id })" title="@Resources.Edit" class="btn btn-info btn-mini"><i class="icon-edit icon-white"></i></a>
                                <a href="@Url.Action("Details", new { id = item.Id })" title="@Resources.Details" class="btn btn-danger btn-mini"><i class="icon-share icon-white"></i></a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" title="@Resources.Delete" class="btn btn-danger btn-mini"><i class="icon-remove icon-white"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            @*<form> 
                                    @Html.Partial("NavPagination", (Pagination)ViewData["Nav"])
                                </form>*@
                        </td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <div class="alert">
                <h6>
                    No Data Found.
                </h6>
            </div>
        }
    </div>
</div>
