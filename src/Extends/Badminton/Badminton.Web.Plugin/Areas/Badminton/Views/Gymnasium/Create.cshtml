@using Ornament.Properties
@using Ornament
@model Badminton.Web.Plugin.Areas.Badminton.Models.GymnasiumViewModel

@{
    ViewBag.Title = "Create";
    Layout = OrnamentContext.Configuration.Layout();
}


<div class="widget">
    <div class="body well">

        <form method="POST" class="form-horizontal" action="@Url.Action("Save")">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            @Html.EditorFor(model => model.Gymnasium.Name)

            @Html.EditorFor(model => model.Gymnasium.Phone)

            @Html.EditorFor(model => model.Gymnasium.Address)

            @Html.EditorFor(model => model.Gymnasium.Remarks)
            <div class="form-actions">
                <button class="btn btn-primary">@Resources.Create</button>
                <a href="@Url.Action("Index")" class="btn">@Resources.Cancel</a>
            </div>
        </form>
    </div>
</div>



<div>
    @Html.ActionLink("返回列表", "Index")
</div>
