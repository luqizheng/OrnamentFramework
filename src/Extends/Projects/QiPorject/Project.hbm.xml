<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="QiProject"
                   assembly="QiProject">
  <class name="Project" table="Prj_Project">
    <id name="Id">
      <generator class="native"></generator>
    </id>
    <property name="Name" length="50" type="String" ></property>
    <property name="CreateTime" access="nosetter.camelcase-underscore"></property>
    <property name="Status" type="QiProject.ProjectStatus,QiProject"></property>
    <many-to-one name="Product"></many-to-one>

    <many-to-one name="ProjectManager" class="Ornament.MemberShip.Role,Ornament.MemberShip.Core" cascade="all"></many-to-one>
    <many-to-one name="TestManager" class="Ornament.MemberShip.Role,Ornament.MemberShip.Core" cascade="all"></many-to-one>
    <many-to-one name="DeveloperManager" class="Ornament.MemberShip.Role,Ornament.MemberShip.Core" cascade="all"></many-to-one>
    <many-to-one name="Tester" class="Ornament.MemberShip.Role,Ornament.MemberShip.Core" cascade="all"></many-to-one>
    <many-to-one name="Developer" class="Ornament.MemberShip.Role,Ornament.MemberShip.Core" cascade="all"></many-to-one>
  </class >

  <subclass name="Ornament.MemberShip.Permissions.GenericPermission`1[Project],Ornament.MemberShip.Core"
             extends="Ornament.MemberShip.Permissions.Permission,Ornament.MemberShip.Core" discriminator-value="Project">

    <many-to-one name="Resource" column="ProjectType" class="Project"></many-to-one>
  </subclass>

</hibernate-mapping>