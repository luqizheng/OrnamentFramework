<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="QiProject" assembly="QiProject">
  <class name="Product" table="Prj_Product">
    <id name="Id" length="32">
      <generator class="native"></generator>
    </id>
    <property name="Name" length="50" type="String"></property>
    <set name="Components" access="nosetter.camelcase-underscore" cascade="delete-orphan">
      <key column="ProductId"></key>
      <one-to-many class="Component"/>
    </set>
  </class>

</hibernate-mapping>