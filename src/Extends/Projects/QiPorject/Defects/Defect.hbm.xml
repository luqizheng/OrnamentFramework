<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="QiProject.Defects" assembly="QiProject">
  <class name="Defect" table="Prj_Defect">
    <id name="Id" length="32">
      <generator class="uuid.hex"></generator>
    </id>
    <property name="DefectId"></property>
    <property name="Summary" length="50" type="String"></property>
    <property name="Description" length="1024"></property>
    <property name="Priority"></property>
    <property name="Reproducible"></property>
    <property name="DefectDateTime" access="nosetter.camelcase-underscore"></property>
    <property name="UpdateTime"></property>
    
    <property name="Status"></property>
    <many-to-one name="Owener"></many-to-one>
    <many-to-one class="Ornament.MemberShip.User" name="Performer"></many-to-one>
    <set name="DuplicateProjects" table="prj_defect_project_relative" access="nosetter.camelcase-underscore">
      <key column="DefectId">
      </key>
      <many-to-many class="QiProject.Project,QiProject"></many-to-many>
    </set>
  </class>


</hibernate-mapping>