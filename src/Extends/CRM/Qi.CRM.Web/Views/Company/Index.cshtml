@using Ornament.Web.Bundles
@using Resources
@using Ornament.Web

@model IEnumerable<Qi.CRM.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/backend/_applayout.cshtml";
}
@section pageTitle{
    <h5>Index
    </h5>
}


<div class="widget">
    <div class="navbar">
        <div class="navbar-inner">
            <a id="add" class="btn btn-primary" href="###"><i class="icon-plus icon-white"></i>@Resources.Basic.Create</a>
        </div>
    </div>
    <div class="body well">
        <div class="table-overflow">
            <table id="table" class="table ">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Operator</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="warning" class="hide">
    <p>Do you want to delete this news ?</p>
    <button class="btn btn-danger deleteYes">@Basic.Delete</button>
    <button class="btn deleteNo">@Basic.Cancel</button>
</div>

@section Scripts {
    <script type="text/javascript">
        seajs.use(["@ScriptsSeajs.RenderUrl("~/crm/company/index.js")"], function (init) {
            init({
                url: "@Url.Action("Companies")"
            });
        });
    </script>
}



