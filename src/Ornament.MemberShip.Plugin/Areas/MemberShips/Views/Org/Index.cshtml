@using Ornament
@using Ornament.MemberShip
@using Ornament.MemberShip.Plugin.Models
@using Ornament.Web.HtmlExtends
@model Ornament.MemberShip.Org
@{
    ViewBag.Title = "Organization";
    Layout = OrnamentContext.Configuration.BackendLayout();
    string parentId = Model != null ? Model.Id : "";
    var childOrgs = ((IEnumerable<Org>) ViewData["Orgs"]);
    bool editPermission = OrnamentContext.MemberShip.HasRight("Org", OrgOperator.Modify);
}
@section pageTitle
{
    @if (Model == null || Model.Parent == null)
    {
        <h5>Org List </h5>
    }
    else
    {
        <h5>@Model.Name</h5>
    }
    <span>
        @Html.Partial("OrgNavigator", Model)
    </span>
}

<div class="widget">
    @Html.BoxHeader(
        @<text>
             <a  class="btn btn-primary" href="@Url.Action("Create", new {parentId})"><i class="icon-white icon-plus"></i>
                 @Ornament.Properties.Resources.Create
             </a>
         </text>)

    <div class="body well">
        @if (childOrgs.Count() != 0)
        {
            <div class="row">
                @if (childOrgs.Count() != 0)
                {
                    <div class="span4">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 40px"></th>
                                    <th>
                                        @Html.LabelFor(s => s.Name)
                                    </th>
                                    <th>
                                        @Html.LabelFor(s => s.Remarks)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (Org item in childOrgs)
                            {
                                <tr>
                                    <th>
                                        <a href="@Url.Action("index", new {id = item.Id})" class="btn btn-info btn-mini"><i class="icon-arrow-right icon-white"></i></a>
                                    </th>
                                    <td>@item.Name
                                    </td>
                                    <td>@item.Remarks
                                    </td>
                                    <td>
                                        @if (editPermission)
                                        {
                                            <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-info btn-mini"><i class=" icon-edit icon-white"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                }

            </div>
        }
        else
        {
            <div class="alert">
                Not found org.
            </div>
        }
    </div>
</div>