@using Ornament
@using Ornament.Properties
@using Ornament.Web
@model Ornament.MemberShip.Plugin.Models.Memberships.EditUserModel
@{
    ViewBag.Title = Resources.Edit + Model.LoginId;
    Layout = OrnamentContext.Configuration.BackendLayout();
}
@section pageTitle{
    <h5>
        @Model.LoginId
    </h5>
}

@using (Html.BeginForm("edit", "User", FormMethod.Post, new {@class = "form-horizontal"}))
{
    <div class="well">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#editUser" data-toggle="tab">@Html.GetResourceString("Create", "tab_basicInfo")</a></li>
            <li><a href="#Options" data-toggle="tab">@Html.GetResourceString("Create", "tab_Permission")</a></li>
            @*<li><a data-toggle="tab" href="#Profile">@Html.GetResourceString("tab_profile")</a></li>*@
            <li><a data-toggle="tab" href="#anotherInfo">@Html.GetResourceString("tab_anotherInfo")</a></li>
        </ul>

        <div class="tab-content">
            <div id="editUser" class="tab-pane active">
                @Html.EditorFor(s => s, "_BasicInfo")
            </div>
            <div id="Options" class="tab-pane">
                @Html.EditorFor(s => s.Permissions, "_PermissionInfo")
            </div>
            @* 
           // Do not use profile 
            <div id="Profile" class="tab-pane"> 
                
                @{
                    var emu = ProfileBase.Properties.GetEnumerator();
                    if (emu != null)
                    {
                        while (emu.MoveNext())
                        {
                            var property = emu.Current as SettingsProperty;
                            <div class="control-group">
                                <label class="control-label">@property.Name</label>
                                <div class="controls">
                                    @Html.TextBox(property.Name, property.DefaultValue)
                                </div>
                            </div>
                        }
                    }
                }
            </div>*@
            <div id="permissions" class="tab-pane">
            </div>
            <div id="anotherInfo" class="tab-pane">
                @Html.EditorFor(s => s.OtherInfo)
            </div>
        </div>

        <p class="form-actions">
            <button id="submitButton" class="btn btn-info" type="submit">@Resources.Save</button>
            <a id="cancelButton" class="btn" href="@Url.Action("Index", "User", new {area = "MemberShips"})">@Resources.Cancel</a>
        </p>
    </div>
}

@section scripts{
    <script type="text/javascript">
        seajs.use(["/memberships/user/edit.js"]);
    </script>
}