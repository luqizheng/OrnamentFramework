@using Ornament
@using Ornament.Properties

@using Resources = Ornament.Properties.Resources
@model Ornament.MemberShip.UserGroup
@{
    ViewBag.Title = "分配角色:" + this.Model.Name;
    Layout = OrnamentContext.Configuration.BackendLayout();

   
}
@section Scripts{
    <script type="text/javascript">
        seajs.use(['jquery'], function () {
            $("#cancel").click(function () { location = '@Url.Action("Index")'; });
        });
    </script>
}
@section pageTitle
{
    <h6>@Ornament.MemberShip.Plugin.Properties.Resources.AssignRoles:@this.Model.Name</h6>
}
@using (Html.BeginForm())
{
    <header>
        <button type="submit" id="submit" class="btn btn-primary">
            <i class="icon-ok icon-white"></i>
            @Resources.Save
        </button>
        <button type="button" id="cancel" class="btn">@Resources.Cancel</button>
    </header>
    <section>
        <input id="Id" name="Id" value="@this.Model.Id"  type="hidden"/>
        @Html.Partial("RoleAssign", this.Model.GetAllRoles())
    </section>
                    
                
}


