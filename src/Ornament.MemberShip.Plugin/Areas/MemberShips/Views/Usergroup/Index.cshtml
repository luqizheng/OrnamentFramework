@using Ornament
@using Ornament.Properties
@using Ornament.Web
@model IEnumerable<Ornament.MemberShip.UserGroup>

@{
    ViewBag.Title = "View1";
    Layout = OrnamentContext.Configuration.BackendLayout();
}
@section pageTitle{
    <h6>UserGroup List</h6>
}


<div class="widget">
    <div class="navbar">
        <div class="navbar-inner">
            <a id="add" class="btn btn-primary" href="@Url.Action("Create")"><i class="icon-plus icon-white"></i>@Resources.Create</a>
        </div>
    </div>
    <div class="body well">
        @if (Model.Count() != 0)
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Remarks)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id })" title="@Resources.Edit" class="btn btn-info btn-mini">
                                    <i class="icon-edit icon-white"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id = item.Id })" title="@Resources.Edit" class="btn btn-mini">
                                    <i class="icon-share icon-white"></i>
                                </a>


                                <a href="@Url.Action("Delete", new { id = item.Id })" title="@Resources.Edit" class="btn btn-danger btn-mini">
                                    <i class="icon-remove icon-white"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            @*<form>
                                @Html.Partial("NavPagination", (Pagination)(ViewData["Nav"] ?? new Pagination()))
                            </form>*@
                        </td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <div class="alert">
                <h6>No news found. 
                </h6>
            </div>
        }
    </div>
</div>
