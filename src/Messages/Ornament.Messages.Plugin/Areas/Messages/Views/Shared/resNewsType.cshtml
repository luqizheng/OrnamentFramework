@using Ornament
@using Ornament.Messages.Newses
@using Basic = Ornament.Properties.Resources
@model Ornament.MemberShip.Plugin.Areas.MemberShips.Models.PermissionResourceSelectModel
@{
    IList<NewsType> items = OrnamentContext.DaoFactory.MessageDaoFactory.NewsTypeDao.GetAll();
    string selected = "";
    if (items.Count != 0)
    {
        selected = items.First().Id;
        if (Model != null && Model.Permission != null && Model.Permission.Resource != null)
        {
            selected = ((NewsType) Model.Permission.Resource).Id;
        }
    }
}
@if (items.Count() != 0)
{
    <table class="table table-condensed table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Name
                </th>
                <th>Remark
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (NewsType item in items)
            {
                <tr>
                    <td>
                        @Html.RadioButton("ResourceId", item.Id, item.Id == selected)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>

                </tr>
            }
       
        </tbody>
    </table>
}
else
{
    <label class="alert-warning label">Can not find any news type.</label>
}