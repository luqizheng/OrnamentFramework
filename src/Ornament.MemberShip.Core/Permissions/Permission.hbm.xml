<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"  namespace="Ornament.MemberShip.Permissions" assembly="Ornament.MemberShip.Core">
  <class name="Permission" table="MBS_Permission" abstract="true" >
    
    <id name="Id" length="32">
      <generator class="uuid.hex"></generator>
    </id>
    
    <discriminator column="diff" length="32" type="String"></discriminator>
    <property name="Name" type="String" length="100"></property>
    <property name="Remark" type="String" length="250"></property>
    <property name="Operator" type="Int32"></property>    
  </class>

  <subclass name="Ornament.MemberShip.Permissions.GenericPermission`1[System.String]"
            extends="Permission" discriminator-value="Kind">    
    
    <property name="Resource" column="TypeResource" type="String" length="64"></property>
  </subclass>

</hibernate-mapping>