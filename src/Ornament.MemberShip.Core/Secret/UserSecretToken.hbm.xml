<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="Ornament.MemberShip.Secret"
                   assembly="Ornament.MemberShip.Core">
  <class name="UserSecretToken" table="MBS_UserSecretToken">
    <id name="Id" length="32">
      <generator class="uuid.hex"></generator>
    </id>
    <many-to-one name="Account" column="AccountUser"></many-to-one>
    <property name="CreateTime" type="DateTime"></property>
    <property name="PrivateKey" type="string" length="32"></property>
    <property name="Action" type="Ornament.MemberShip.Secret.ActiveUserAction,Ornament.MemberShip.Core"></property>
  </class>
</hibernate-mapping>