@model IEnumerable<ApplicationRole>

<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    @Html.Partial("_pageCrumb")
</div>

<div class="col-sm-12">
    <div class="well">
        <form class="form-inline" role="form" style="margin-bottom: 15px">
            <div class="btn-group">
                <button type="button" class="btn btn-default"><i class="fa fa-user-plus"></i>添加</button>
                <button type="button" class="btn btn-danger"><i class="fa fa-trash"></i>删除</button>
            </div>
        </form>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Remark)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in this.Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Edit")">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Remark
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
