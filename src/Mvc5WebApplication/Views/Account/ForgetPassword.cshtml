@using System.Web.Optimization
@using Ornament.Web
@model Ornament.MemberShip.Web.Plugin.Models.Security.ForgetPasswordModel

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_standLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 hidden-xs hidden-sm">
        <h1 class="txt-color-red login-header-big">SmartAdmin</h1>
        <div class="hero">

            <div class="pull-left login-desc-box-l">
                <h4 class="paragraph-header">It's Okay to be Smart. Experience the simplicity of SmartAdmin, everywhere you go!</h4>
                <div class="login-app-icons">
                    <a href="javascript:void(0);" class="btn btn-danger btn-sm">Frontend Template</a>
                    <a href="javascript:void(0);" class="btn btn-danger btn-sm">Find out more</a>
                </div>
            </div>

            <img src="/img/demo/iphoneview.png" class="pull-right display-image" alt="" style="width: 210px">
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <h5 class="about-heading">About SmartAdmin - Are you up to date?</h5>
                <p>
                    Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa.
                </p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <h5 class="about-heading">Not just your average template!</h5>
                <p>
                    Et harum quidem rerum facilis est et expedita distinctio. Nam libero tempore, cum soluta nobis est eligendi voluptatem accusantium!
                </p>
            </div>
        </div>

    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
        <div class="well no-padding">
            <form action="@Url.Action("ForgetPassword")" id="forms" class="smart-form client-form" method="POST" ms-controller="forgetPassword"><header>
                    @Html.GetResourceString("Title")
                </header>

                <fieldset>

                    <section>
                        <label class="label">@Html.GetResourceString("Email")</label>
                        <label class="input">
                            <i class="icon-append fa fa-envelope"></i>
                            @Html.TextBoxFor(s => s.Email)
                            @Html.ValidationMessageFor(s=>s.Email)
                            <b class="tooltip tooltip-top-right"><i class="fa fa-envelope txt-color-teal"></i>@Html.GetResourceString("EnterEmail")</b></label>
                    </section>
                    <section>
                        <span class="timeline-seperator text-center text-primary"><span class="font-sm">AND</span></span>
                    </section>
                    <section>
                        <label class="label">@Html.GetResourceString("LoginId")</label>
                        <label class="input">
                            <i class="icon-append fa fa-user"></i>
                            @Html.TextBoxFor(s => s.Account)
                            @Html.ValidationMessageFor(s=>s.Account)
                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i>@Html.GetResourceString("EnterLoginId")</b>
                        </label>
                        <div class="note">
                            <a href="@Url.Action("logon", "Account")">@Html.GetResourceString("RedirectLoginPage")</a>
                        </div>
                    </section>

                </fieldset>
                <footer>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-refresh"></i>@Html.GetResourceString("Submit")
                    </button>
                </footer>
            </form>

        </div>

        <h5 class="text-center">- Or sign in using -</h5>

        <ul class="list-inline text-center">
            <li>
                <a href="javascript:void(0);" class="btn btn-primary btn-circle"><i class="fa fa-facebook"></i></a>
            </li>
            <li>
                <a href="javascript:void(0);" class="btn btn-info btn-circle"><i class="fa fa-twitter"></i></a>
            </li>
            <li>
                <a href="javascript:void(0);" class="btn btn-warning btn-circle"><i class="fa fa-linkedin"></i></a>
            </li>
        </ul>

    </div>
</div>

@section scripts{
    <script type="text/javascript">
        require(["/Scripts/Config.js"],function() {
            require(['@Scripts.Url("~/Scripts/modules/accounts/forgetpassword.js")','vaform'], function (b) {
                var message = {
                    Success: "@Html.GetResourceString("Success")",
                NotExistAccountOrEmail: "@Html.GetResourceString("NotExistAccountOrEmail")",
            };
                  b(message, "@Url.Action("logOn")");
              });
        })
      
    </script>
}