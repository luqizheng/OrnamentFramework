@using System.Web.Optimization
@if (IsSectionDefined("pageTitle") || IsSectionDefined("sparks"))
{
    <div class="row">
        @if (IsSectionDefined("pageTitle"))
        {
            var classWidth = IsSectionDefined("sparks") ? "col-xs-12 col-sm-7 col-md-7 col-lg-4" : "col-xs-12 col-sm-12 col-md-12 col-lg-12";
            <div class="@classWidth">
                <h1 class="page-title txt-color-blueDark">
                    @RenderSection("pageTitle", required: false)
                </h1>
            </div>
        }
        @if (IsSectionDefined("sparks"))
        {
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
                @RenderSection("sparks", required: false)
            </div>
        }
    </div>
}
<section id="widget-grid" class="">
    @RenderBody()
</section>

<script type="text/javascript">
    require(["/Scripts/modules/pageMain.js"], function (a) {a();})
</script>


@RenderSection("scripts", required: false)
