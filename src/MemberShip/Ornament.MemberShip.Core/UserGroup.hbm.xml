<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Ornament.MemberShip" assembly="Ornament.MemberShip.Core">
  <subclass name="UserGroup"  discriminator-value="UserGroup" extends="IPerformer">
    <join table="MBS_UserGroup">
      <key column="Id"></key>
      <property name="Remark" length="200" type="String"></property>
      <property name="Name" length="30" type="String" not-null="true" unique="true"></property>
      <set name="Roles" table="MBS_UserGroupRoleRelation" lazy="true" cascade="none" access="nosetter.camelcase-underscore">
        <key column="UserGroupId" foreign-key="FK_MSB_USERGROUP"/>
        <many-to-many class="Role" column="RoleId" foreign-key="FK_MBS_ROLE"></many-to-many>
      </set>
    </join>

  </subclass>
</hibernate-mapping>