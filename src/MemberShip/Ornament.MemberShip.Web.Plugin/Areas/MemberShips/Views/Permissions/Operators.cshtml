@using Ornament
@using Qi
@model Ornament.MemberShip.Permissions.Permission
@{
    Type enumType = OrnamentContext.ResourceManager.GetOperatorType(Model.Resource);
    SortedDictionary<string, object> directory = Qi.EnumHelper.GetDescriptionList(enumType);
    var list = new List<string>();
}
@foreach (string key in directory.Keys)
{
    if (Convert.ToInt32(directory[key]) != 0 && Model.HasOperator((Enum) directory[key]))
    {
        list.Add("[" + directory[key] + "]");
    }
    else
    {
        list.Add(directory[key].ToString());
    }
}
@String.Join(",", list.ToArray())