@model Ornament.MemberShip.Role
@Html.ValidationSummary(true)
<div class="form-group">
    <label class="col-md-2  control-label">
        @Html.DisplayNameFor(s => s.Name)</label>
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Name, new Dictionary<string, object>
        {
            {"ms-duplex", "Name"}, 
            {"ms-attr-disabled", "!editing"},
            {"class","form-control"}
        })
    </div>
</div>
<div class="form-group">
    <label class="col-md-2  control-label">
        @Html.DisplayNameFor(s => s.Remarks)
    </label>
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Remarks, new Dictionary<string, object>
        {
            {"ms-duplex", "Remarks"},
            {"ms-attr-disabled", "!editing"},  {"class","form-control"}
        })
    </div>
</div>

@Html.HiddenFor(model => model.Id, new Dictionary<string, object>
{
    {"ms-duplex", "Id"}
})
<div class="form-group">
    <label class="control-label">@Html.DisplayFor(s => s.Permissions)</label>
    <div class="col-md-10">
        @Html.Partial("_Permissions", Model)
    </div>
</div>