@using Qi.Web.Mvc;
@using QiProject
@using Resources
@model System.Collections.Generic.IEnumerable<QiProject.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_appLayout.cshtml";
}
<div class="page-header">
    <h1>
        Products</h1>
    <p>
        Maintant Producs such as project component
    </p>
</div>
<div class="box">
    <div class="content">
        <section>
            <header>
                <a class="btn btn-primary" href="@Url.Action("Create")"><i class="icon-plus"></i> @Basic.Create</a>
            </header>
            <section>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="span4">
                            </th>
                            <th>
                                @Html.ContentFor(m => ((Product)null).Name)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in this.Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = product.Id })">@Basic.Edit</a> | <a href="@Url.Action("Create", "Project", new { id = product.Id })">
                                        Create Project</a>
                                </td>
                                <td>@product.Name
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </section>
    </div>
</div>
